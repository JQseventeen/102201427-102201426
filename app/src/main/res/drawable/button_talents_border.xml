<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 设置按钮背景颜色为浅蓝色 -->
    <solid android:color="#ADD8E6" />

    <!-- 设置按钮圆角半径 -->
    <corners android:radius="4dp" />

    <!-- 设置边框颜色和宽度 -->
    <stroke
        android:width="2dp"
        android:color="#87CEEB"/> <!-- 边框稍深的浅蓝色 -->

    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>