<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F8F8"
    tools:context=".SettingsHelpActivity">

    <!-- Header -->
    <TextView
        android:id="@+id/header_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="设置与帮助"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="24dp" />

    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_back"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:contentDescription="@string/back_button_desc" />

    <!-- Help Content -->

    <!-- Input command field -->
    <TextView
        android:id="@+id/help_content"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="32dp"
        android:layout_marginTop="88dp"
        android:text="1. 身份认证\n进入我的 -> 身份认证 -> 认证，即可增删您的身份认证信息\n\n2. 人才林信息修改\n进入我的 -> 编辑我的人才林，即可增删您的人才标签信息\n\n3. 项目管理\n进入仓库 -> 创建项目，即可新建或管理您的项目"
        android:textColor="#333333"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_title" />


    <!-- Send Button -->

    <EditText
        android:id="@+id/input_command"
        android:layout_width="310dp"
        android:layout_height="56dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginEnd="116dp"
        android:layout_marginBottom="4dp"
        android:background="@drawable/settings_rounded_edit_text"
        android:hint="请输入命令"
        android:inputType="text"
        android:minHeight="28dp"
        android:padding="12dp"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/send_button"
        android:layout_width="69dp"
        android:layout_height="61dp"
        android:layout_marginStart="4dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/send_button_desc"
        android:src="@drawable/ic_send"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/input_command" />

</androidx.constraintlayout.widget.ConstraintLayout>