<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/backgroundColor"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Team first"
        android:textSize="16sp"
        android:textStyle="bold" />
    <!-- Top Navigation Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/topBarBackgroundColor"
        android:elevation="4dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingVertical="8dp">

        <ImageView
            android:layout_width="49dp"
            android:layout_height="45dp"
            android:onClick="goBack"
            android:padding="8dp"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="欢迎进入人才林"
            android:textColor="@color/textPrimary"
            android:textSize="18sp" />

        <ImageView
            android:layout_width="63dp"
            android:layout_height="78dp"
            android:padding="8dp"
            android:src="@drawable/tree_icon" />
    </LinearLayout>

    <!-- Search Bar -->
    <SearchView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:queryHint="搜索"
        android:background="@drawable/search_view_background"
        android:iconifiedByDefault="false"
        android:elevation="2dp" />

    <!-- List of People -->

    <!-- Bottom Trees Decoration -->

    <ListView
        android:id="@+id/listView_people"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:dividerHeight="8dp"
        android:paddingTop="8dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_trees" />
</LinearLayout>